{
  "name": "monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "postinstall": "husky install",
    "linter": "yarn workspace @monorepo/eslint-config",
    "run:eslint": "eslint --fix packages",
    "build": "yarn workspaces foreach -ptv run build",
    "dev": "yarn workspaces foreach -ptv run dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@monorepo/eslint-config": "*",
    "eslint": "^7.24.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "typescript": "^4.2.4"
  }
}
